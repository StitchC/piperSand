modal-style()
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-color: rgba(0,0,0,0.4)

dialog-style()
  position: absolute
  top: 50%
  left: 50%


close-btn-style()
  display: inline-block
  margin-right: 20px
  line-height: 40px
  font-size: 20px
  cursor: pointer

// 确认按钮可用状态 mixin
confirm-btn-enable()
  position: absolute
  bottom 0
  left: 0
  width: 100%
  height: 38px
  line-height: 38px
  background-color: #2eae57
  text-align: center
  font-size: 14px
  color: #fff
  cursor: pointer


// 确认按钮不可用状态 mixin
confirm-btn-disable()
  position: absolute
  bottom 0
  left: 0
  width: 100%
  height: 38px
  line-height: 38px
  background-color: #393939
  text-align: center
  font-size: 14px
  color: #ccc
  cursor: pointer

// 淡出淡入动画 mixin
fade-animate(classname, opacityBefore, opacityAfter)
  &.{classname + '-enter'}
    opacity: opacityBefore
  &.{classname + '-enter-active'}
    transition: all .4s ease
  &.{classname + '-enter-to'}
    opacity: opacityAfter
  &.{classname + '-leave-to'}
    opacity: opacityBefore
  &.{classname + '-leave-active'}
    transition: all .4s ease
